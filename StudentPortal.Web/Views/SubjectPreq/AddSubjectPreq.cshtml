@model StudentPortal.Web.Models.AddSubjectPreqViewModel


<h1>Add Pre-Requisite Subjects</h1>

<form method="post" asp-action="Add">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mt-3">
        <label class="form-label">Subject Code</label>
        <input type="text" class="form-control" maxlength="15" asp-for="SUBJCODE" />
        <span asp-validation-for="SUBJCODE" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Prerequisite Code</label>
        <input type="text" class="form-control" maxlength="15" asp-for="SUBJPRECODE" />
        <span asp-validation-for="SUBJPRECODE" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Category</label>
        <select class="form-control" asp-for="SUBJCATEGORY">
            <option value="">Select Category</option>
            <option value="PR">Prerequisite (PR)</option>
            <option value="CR">Co-requisite (CR)</option>
        </select>
        <span asp-validation-for="SUBJCATEGORY" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="List" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}