@model StudentPortal.Web.Models.AddSubjectSchedViewModel

@{
    ViewData["Title"] = "Edit Subject Schedule";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <div>
        <label for="SSFEDPCODE">EDP Code</label>
        <input type="text" id="SSFEDPCODE" name="SSFEDPCODE" value="@Model.SSFEDPCODE" readonly />
    </div>

    <div>
        <label for="SSFSUBJCODE">Subject Code</label>
        <input type="text" id="SSFSUBJCODE" name="SSFSUBJCODE" value="@Model.SSFSUBJCODE" />
    </div>

    <div>
        <label for="SSFSTARTTIME">Start Time</label>
        <input type="time" id="SSFSTARTTIME" name="SSFSTARTTIME" value="@Model.SSFSTARTTIME.ToString("HH:mm")" />
    </div>

    <div>
        <label for="SSFENDTIME">End Time</label>
        <input type="time" id="SSFENDTIME" name="SSFENDTIME" value="@Model.SSFENDTIME.ToString("HH:mm")" />
    </div>

    <div>
        <label for="SSFDAYS">Days</label>
        <input type="text" id="SSFDAYS" name="SSFDAYS" value="@Model.SSFDAYS" />
    </div>

    <div>
        <label for="SSFROOM">Room</label>
        <input type="text" id="SSFROOM" name="SSFROOM" value="@Model.SSFROOM" />
    </div>

    <div>
        <label for="SSFMAXSIZE">Max Size</label>
        <input type="number" id="SSFMAXSIZE" name="SSFMAXSIZE" value="@Model.SSFMAXSIZE" />
    </div>

    <div>
        <label for="SSFCLASSSIZE">Class Size</label>
        <input type="number" id="SSFCLASSSIZE" name="SSFCLASSSIZE" value="@Model.SSFCLASSSIZE" />
    </div>

    <div>
        <label for="SSFSTATUS">Status</label>
        <input type="text" id="SSFSTATUS" name="SSFSTATUS" value="@Model.SSFSTATUS" />
    </div>

    <div>
        <label for="SSFXM">Time Period (AM/PM)</label>
        <input type="text" id="SSFXM" name="SSFXM" value="@Model.SSFXM" />
    </div>

    <div>
        <label for="SSFSECTION">Section</label>
        <input type="text" id="SSFSECTION" name="SSFSECTION" value="@Model.SSFSECTION" />
    </div>

    <div>
        <label for="SSFSCHOOLYEAR">School Year</label>
        <input type="number" id="SSFSCHOOLYEAR" name="SSFSCHOOLYEAR" value="@Model.SSFSCHOOLYEAR" />
    </div>

    <button type="submit">Save Changes</button>
</form>

<br />

<!-- Delete Form -->
<form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this schedule?');">
    <input type="hidden" name="SSFEDPCODE" value="@Model.SSFEDPCODE" />
    <input type="hidden" name="SSFSUBJCODE" value="@Model.SSFSUBJCODE" />
    <button type="submit">Delete Schedule</button>
</form>
