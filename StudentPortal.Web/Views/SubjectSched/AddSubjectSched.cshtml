@model StudentPortal.Web.Models.AddSubjectSchedViewModel

<h1>Add Subject Schedule</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">EDP Code</label>
        <input type="text" class="form-control" maxlength="8" asp-for="SSFEDPCODE" />
    </div>

    <div class="mt-3">
        <label class="form-label">Subject Code</label>
        <input type="text" class="form-control" maxlength="15" asp-for="SSFSUBJCODE" />
    </div>

    <div class="mt-3">
        <label class="form-label">Start Time</label>
        <input type="time" class="form-control" asp-for="SSFSTARTTIME" />
    </div>

    <div class="mt-3">
        <label class="form-label">End Time</label>
        <input type="time" class="form-control" asp-for="SSFENDTIME" />
    </div>

    <div class="mt-3">
        <label class="form-label">Days</label>
        <select class="form-control" asp-for="SSFDAYS">
            <option value="">Select Day</option>
            <option value="MON">Monday</option>
            <option value="TUE">Tuesday</option>
            <option value="WED">Wednesday</option>
            <option value="THU">Thursday</option>
            <option value="FRI">Friday</option>
            <option value="SAT">Saturday</option>
            <option value="SUN">Sunday</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Room</label>
        <input type="text" class="form-control" maxlength="3" asp-for="SSFROOM" />
    </div>

    <div class="mt-3">
        <label class="form-label">Max Size</label>
        <input type="number" class="form-control" asp-for="SSFMAXSIZE" />
    </div>

    <div class="mt-3">
        <label class="form-label">Class Size</label>
        <input type="number" class="form-control" asp-for="SSFCLASSSIZE" />
    </div>

    <div class="mt-3">
        <label class="form-label">Status</label>
        <select class="form-control" asp-for="SSFSTATUS">
            <option value="">Select Status</option>
            <option value="ACT">Active</option>
            <option value="INA">Inactive</option>
            <option value="DIS">Discontinued</option>
            <option value="RES">Reserved</option>
            <option value="CLO">Closed</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Time Period</label>
        <select class="form-control" asp-for="SSFXM">
            <option value="">Select Period</option>
            <option value="AM">AM</option>
            <option value="PM">PM</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Section</label>
        <input type="text" class="form-control" maxlength="3" asp-for="SSFSECTION" />
    </div>

    <div class="mt-3">
        <label class="form-label">School Year</label>
        <input type="number" class="form-control" asp-for="SSFSCHOOLYEAR" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-secondary">Back</button>
    </div>
</form>
