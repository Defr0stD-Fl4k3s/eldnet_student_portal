@model StudentPortal.Web.Models.AddEnrollmentDetailViewModel

<h1>Add Enrollment Detail</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Student ID</label>
        <input type="number" class="form-control" asp-for="ENRDFSTUDID" step="1" />
        <span asp-validation-for="ENRDFSTUDID" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">EDP Code</label>
        <input type="text" class="form-control" asp-for="ENRDFSTUDEDPCODE" maxlength="8" />
        <span asp-validation-for="ENRDFSTUDEDPCODE" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Subject Code</label>
        <input type="text" class="form-control" asp-for="ENRDFSTUDSUBJCDE" maxlength="15" />
        <span asp-validation-for="ENRDFSTUDSUBJCDE" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Status</label>
        <select class="form-control" asp-for="ENRDFSTUDSTATUS">
            <option value="">Select Status</option>
            <option value="WD">Withdrawn (WD)</option>
            <option value="CA">Cancelled (CA)</option>
        </select>
        <span asp-validation-for="ENRDFSTUDSTATUS" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-secondary" onclick="window.history.back()">Back</button>
    </div>
</form>