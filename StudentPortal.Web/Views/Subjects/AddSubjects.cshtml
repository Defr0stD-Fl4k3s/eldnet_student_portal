@model StudentPortal.Web.Models.AddSubjectsViewModel
<h1>Add Subjects</h1>
<form method="post">

    <div class="mt-3">
        <label class="form-label">Subject Code</label>
        <input type="text" class="form-control" maxlength="15" name="SFSUBJCODE" asp-for="SFSUBJCODE" placeholder="Enter subject code" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Course Code</label>
        <input type="text" class="form-control" maxlength="5" name="SFSUBJCOURSECODE" asp-for="SFSUBJCOURSECODE" placeholder="Enter course code" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Subject Description</label>
        <input type="text" class="form-control" maxlength="40" name="SFSUBJDESC" asp-for="SFSUBJDESC" placeholder="Enter subject description" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Units</label>
        <input type="number" step="0.1" class="form-control" name="SFSUBJUNITS" asp-for="SFSUBJUNITS" placeholder="Enter units" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Regular Offering</label>
        <select class="form-control" name="SFSUBJREGOFRNG" asp-for="SFSUBJREGOFRNG" required>
            <option value="1">First Sem</option>
            <option value="2">Second Sem</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Category</label>
        <select class="form-control" name="SFSUBJCATEGORY" asp-for="SFSUBJCATEGORY" required>
            <option value="LEC">Lecture</option>
            <option value="LAB">Laboratory</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Status</label>
        <select class="form-control" name="SFSUBJSTATUS" asp-for="SFSUBJSTATUS" required>
            <option value="">Select Status</option>
            <option value="AC">Active</option>
            <option value="IN">Inactive</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Curriculum Code</label>
        <input type="text" class="form-control" maxlength="10" name="SFSUBJCURRCODE" asp-for="SFSUBJCURRCODE" placeholder="Enter curriculum code" required />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

    <div class="mt-3">
        <button type="button" class="btn btn-primary">Back</button>
    </div>

</form>
