@{
    ViewData["Title"] = "Add Subjects";
}

@using StudentPortal.Web.Models
@model StudentPortal.Web.Models.AddSubjectsViewModel

<h1>Add Subjects</h1>

<!-- Show all model validation errors -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>ModelState is invalid!</strong>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form method="post" asp-action="Add" asp-controller="Subjects">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mt-3">
        <label class="form-label">Subject Code</label>
        <input type="text" class="form-control" maxlength="15" asp-for="SFSUBJCODE" placeholder="Enter subject code" required />
        <span asp-validation-for="SFSUBJCODE" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Course Code</label>
        <input type="text" class="form-control" maxlength="5" asp-for="SFSUBJCOURSECODE" placeholder="Enter course code" required />
        <span asp-validation-for="SFSUBJCOURSECODE" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Subject Description</label>
        <input type="text" class="form-control" maxlength="40" asp-for="SFSUBJDESC" placeholder="Enter subject description" required />
        <span asp-validation-for="SFSUBJDESC" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Units</label>
        <input type="number" step="0.1" class="form-control" asp-for="SFSUBJUNITS" placeholder="Enter units" required />
        <span asp-validation-for="SFSUBJUNITS" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Regular Offering</label>
        <select class="form-control" asp-for="SFSUBJREGOFRNG" required>
            <option value="1">First Sem</option>
            <option value="2">Second Sem</option>
        </select>
        <span asp-validation-for="SFSUBJREGOFRNG" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Category</label>
        <select class="form-control" asp-for="SFSUBJCATEGORY" required>
            <option value="lec">Lecture</option>
            <option value="lab">Laboratory</option>
        </select>
        <span asp-validation-for="SFSUBJCATEGORY" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Status</label>
        <select class="form-control" asp-for="SFSUBJSTATUS" required>
            <option value="">Select Status</option>
            <option value="AC">Active</option>
            <option value="IN">Inactive</option>
        </select>
        <span asp-validation-for="SFSUBJSTATUS" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Curriculum Code</label>
        <input type="text" class="form-control" maxlength="10" asp-for="SFSUBJCURRCODE" placeholder="Enter curriculum code" required />
        <span asp-validation-for="SFSUBJCURRCODE" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

    <div class="mt-3">
        <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("List", "Subject")'">Back</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
