@model StudentPortal.Web.Models.AddStudentGradeViewModel

<h1>Add Student Grade</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Student ID</label>
        <input type="number" class="form-control" asp-for="SGFSTUDID" step="1" />
        <span asp-validation-for="SGFSTUDID" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Subject Code</label>
        <input type="text" class="form-control" asp-for="SGFSTUDSUBJCODE" maxlength="15"
               pattern="[A-Z0-9]+" title="Uppercase letters and numbers only" />
        <span asp-validation-for="SGFSTUDSUBJCODE" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Grade</label>
        <input type="number" class="form-control" asp-for="SGFSTUDSUBJGRADE"
               step="0.1" min="0.0" max="4.0" />
        <span asp-validation-for="SGFSTUDSUBJGRADE" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">EDP Code</label>
        <input type="text" class="form-control" asp-for="SGFSTUDEDPCODE" maxlength="8" />
        <span asp-validation-for="SGFSTUDEDPCODE" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Remarks</label>
        <select class="form-control" asp-for="SGFSTUDREMARKS">
            <option value="">Select Status</option>
            <option value="Enrollee">Enrollee</option>
            <option value="Returnee">Returnee</option>
        </select>
        <span asp-validation-for="SGFSTUDREMARKS" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-secondary" onclick="window.history.back()">Back</button>
    </div>
</form>