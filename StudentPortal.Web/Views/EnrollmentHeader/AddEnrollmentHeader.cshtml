@model StudentPortal.Web.Models.AddEnrollmentHeaderViewModel

<h1>Add Enrollment Header</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Student ID</label>
        <input type="number" class="form-control" asp-for="ENRHFSTUDID" step="1" />
    </div>

    <div class="mt-3">
        <label class="form-label">Enrollment Date</label>
        <input type="date" class="form-control" asp-for="ENRHFSTUDDATEENROLL" />
    </div>

    <div class="mt-3">
        <label class="form-label">School Year</label>
        <input type="text" class="form-control" maxlength="15" asp-for="ENRHFSTUDSCHLYR" />
    </div>

    <div class="mt-3">
        <label class="form-label">Encoder</label>
        <input type="text" class="form-control" maxlength="15" asp-for="ENRHFSTUDENCODER" />
    </div>

    <div class="mt-3">
        <label class="form-label">Total Units</label>
        <input type="number" class="form-control" asp-for="ENRHFSTUDTOTALUNITS" step="0.01" />
    </div>

    <div class="mt-3">
        <label class="form-label">Status</label>
        <select class="form-control" asp-for="ENRHFSTUDSTATUS">
            <option value="">Select Status</option>
            <option value="EN">Enrolled (EN)</option>
            <option value="UN">Under Evaluation (UN)</option>
        </select>
        <span asp-validation-for="ENRHFSTUDSTATUS" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-secondary" onclick="window.history.back()">Back</button>
    </div>
</form>