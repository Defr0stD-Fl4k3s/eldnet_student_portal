@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Student Portal</title>
    <!-- Link to your CSS file. Make sure the path matches your project structure -->
    <link rel="stylesheet" href="~/css/homestyle.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar Navigation -->
    <aside class="sidebar">
        <h2>Student Portal</h2>
        <ul>
            <li><a href="@Url.Action("Index", "Home")">Home View</a></li>
            <li><a href="@Url.Action("List", "Students")">Students View</a></li>
            <li><a href="@Url.Action("List", "Subjects")">Subjects View</a></li>
            <li><a href="@Url.Action("List", "SubjectPreq")">Subject Pre Requisite View</li>
            <li><a href="@Url.Action("List", "SubjectSched")">Subject Schedule View</a></li>
            <li><a href="@Url.Action("List", "EnrollmentHeader")">Enrollment Header View</a></li>
            <li><a href="@Url.Action("List", "EnrollmentDetail")">Enrollment Detail View</a></li>
            <li><a href="@Url.Action("Grades", "Home")">Student Grade View</a></li>


        </ul>
    </aside>

    <!-- Main Content -->
    <main>
        <h1>Welcome to Student Portal</h1>
        <p>Select an option from the sidebar to get started.</p>

        <!-- Quick Action Cards -->
        <div class="card-container">

            <div class="card">
                <h3>Add Student</h3>
                <p>Register new students in the system.</p>
                <a href="@Url.Action("Add", "Students")">Add Student</a>
            </div>

            <div class="card">
                <h3>Add Subject</h3>
                <p>Manage subject listings and offerings.</p>
                <a href="@Url.Action("AddSubjects", "Subjects")">Add Subject</a>
            </div>

            <div class="card">
                <h3>Add Pre Requisite</h3>
                <p>Add pre-requisite subjects.</p>
                <a href="@Url.Action("AddSubjectPreq", "SubjectPreq")">Add Pre Requisite</a>
            </div>

            <div class="card">
                <h3>Add Subject Schedule</h3>
                <p>Add subject schedules for students.</p>
                <a href="@Url.Action("AddSubjectSched", "SubjectSched")">Add Subject Schedule</a>
            </div>

            <div class="card">
                <h3>Add Enrollment Header</h3>
                <p>Add Enrollment header for students.</p>
                <a href="@Url.Action("AddEnrollmentHeader", "EnrollmentHeader")">Add Enrollment Header</a>
            </div>

            <div class="card">
                <h3>Add Enrollment Details</h3>
                <p>Add Enrollment Details for students.</p>
                <a href="@Url.Action("AddEnrollmentDetail", "EnrollmentDetail")">Add Enrollment Detail</a>
            </div>

            <div class="card">
                <h3>Add Student Grade</h3>
                <p>Add Student Grades for students.</p>
                <a href="@Url.Action("AddStudentGrade", "StudentGrade")">Add Student Grade</a>
            </div>
        </div>
    </main>
</body>
</html>
