@model IEnumerable<StudentPortal.Web.Models.Entities.StudentFile>

@{
    ViewData["Title"] = "Students List";
}

<h1>Student List</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Course</th>
            <th>Year</th>
            <th>Remarks</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.STFSTUDID</td>
                <td>@student.STFSTUDLNAME</td>
                <td>@student.STFSTUDFNAME</td>
                <td>@student.STFSTUDMNAME</td>
                <td>@student.STFSTUDCOURSE</td>
                <td>@student.STFSTUDYEAR</td>
                <td>@student.STFSTUDREMARKS</td>
                <td>@(student.STFSTUDSTATUS == "A" ? "Active" : "Inactive")</td>
            </tr>
        }
    </tbody>
</table>
