@model IEnumerable<StudentPortal.Web.Models.Entities.StudentFile>

@{
    ViewData["Title"] = "Students List";
}

<h1>Student List</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Course</th>
            <th>Year</th>
            <th>Remarks</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var studentfile in Model)
        {
            <tr>
                <td>@studentfile.STFSTUDID</td>
                <td>@studentfile.STFSTUDLNAME</td>
                <td>@studentfile.STFSTUDFNAME</td>
                <td>@studentfile.STFSTUDMNAME</td>
                <td>@studentfile.STFSTUDCOURSE</td>
                <td>@studentfile.STFSTUDYEAR</td>
                <td>@studentfile.STFSTUDREMARKS</td>
                <td>@(studentfile.STFSTUDSTATUS == "A" ? "Active" : "Inactive")</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@studentfile.STFSTUDID">Edit</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>
