@model StudentPortal.Web.Models.AddStudentViewModel
<h1>Add Students</h1>

<form method="post">

<div class="mt-3">
    <label class="form-label">Last Name</label>
    <input type="text" class="form-control" maxlength="15" name="LastName" asp-for="STFSTUDLNAME" />
</div>


<div class="mt-3">
    <label class="form-label">First Name</label>
    <input type="text" class="form-control" maxlength="15" name="FirstName" asp-for=STFSTUDFNAME />
</div>


<div class="mt-3">
    <label class="form-label">Middle Name</label>
    <input type="text" class="form-control" maxlength="15" name="MiddleName" asp-for=STFSTUDMNAME/>
</div>


<div class="mt-3">
    <label class="form-label">Course</label>
    <input type="text" class="form-control" maxlength="10" name="StudentCourse" asp-for=STFSTUDCOURSE/>
</div>


<div class="mt-3">
    <label class="form-label">Year</label>
    <input type="text" class="form-control" name="StudentYear" min="1" max="10" asp-for=STFSTUDYEAR />
</div>

<div class="mt-3">
    <label class="form-label">Remarks</label>
    <select class="form-control" name="STFSTUDREMARKS" asp-for=STFSTUDREMARKS>
        <option value="">Select Remarks</option>
        <option value="Shiftee">Shiftee</option>
        <option value="Transferee">Transferee</option>
        <option value="New">New</option>
        <option value="Old">Old</option>
        <option value="Cross-Enrollee">Cross-Enrollee</option>
        <option value="Returnee">Returnee</option>
    </select>
</div>

<div class="mt-3">
    <label class="form-label">Status</label>
    <select class="form-control" name="STFSTUDSTATUS" asp-for=STFSTUDSTATUS>
        <option value="">Select Status</option>
        <option value="A">Active</option>
        <option value="IN">Inactive</option>
    </select>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Submit</button>
</div>

  <div class="mt-3">
        <button type="button" class="btn btn-primary">Back</button>
  </div>

</form>